<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background: #f8f9fa; }
        .profile-container { max-width: 800px; margin: 0 auto; padding: 20px; }
        .profile-header { background: linear-gradient(135deg, #28a745 0%, #20c997 100%); color: white; padding: 30px; border-radius: 10px; margin-bottom: 30px; }
        .form-card { background: white; padding: 30px; border-radius: 10px; box-shadow: 0 2px 15px rgba(0,0,0,0.1); }
        .info-card { background: #f8f9fa; padding: 20px; border-radius: 10px; margin-bottom: 20px; border-left: 4px solid #dc3545; }
        .required:after { content: " *"; color: #dc3545; }
    </style>
</head>
<body>
    <div style="background: #dc3545; color: white; padding: 15px 0;">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <a href="/" style="color: white; text-decoration: none; font-weight: bold;">
                    <i class="fas fa-utensils"></i>
                    Carnicería Tenerife
                </a>
                <div>
                    <a href="/mi-cuenta" style="color: white; text-decoration: none; margin-right: 15px;">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="profile-container">
        <!-- Header -->
        <div class="profile-header">
            <h1><i class="fas fa-user-circle me-2"></i>Mi Perfil</h1>
            <p class="lead">Actualiza tus datos personales</p>
        </div>
        
        <!-- Mensajes -->
        <% if (success_msg && success_msg.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show mb-4">
                <i class="fas fa-check-circle me-2"></i><%= success_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <% if (error_msg && error_msg.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show mb-4">
                <i class="fas fa-exclamation-circle me-2"></i><%= error_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <div class="row">
            <div class="col-md-4">
                <!-- Información actual -->
                <div class="info-card">
                    <h5><i class="fas fa-info-circle me-2"></i>Tu información actual</h5>
                    <hr>
                    <p><strong>Nombre:</strong> <%= customer.nombre %></p>
                    <p><strong>Email:</strong> <%= customer.email %></p>
                    <p><strong>Teléfono:</strong> <%= customer.telefono || 'No especificado' %></p>
                    <p><strong>Dirección:</strong> <%= customer.direccion || 'No especificada' %></p>
                    <p><strong>Ciudad:</strong> <%= customer.ciudad || 'No especificada' %></p>
                    <% if (customer.codigo_postal) { %>
                        <p><strong>Código Postal:</strong> <%= customer.codigo_postal %></p>
                    <% } %>
                    <p><strong>Miembro desde:</strong> <%= formatDate(customer.fecha_registro) %></p>
                </div>
                
                <div class="alert alert-info">
                    <i class="fas fa-lightbulb me-2"></i>
                    <strong>Importante:</strong> Para realizar pedidos online, necesitas tener teléfono, dirección y ciudad completos.
                </div>
            </div>
            
            <div class="col-md-8">
                <!-- Formulario de actualización -->
                <div class="form-card">
                    <h3 class="mb-4"><i class="fas fa-user-edit me-2"></i>Editar perfil</h3>
                    
                    <form id="updateProfileForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label required">Nombre completo</label>
                                <input type="text" class="form-control" name="nombre" 
                                       value="<%= customer.nombre %>" required>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label required">Teléfono</label>
                                <input type="tel" class="form-control" name="telefono" 
                                       value="<%= customer.telefono || '' %>" required
                                       placeholder="612345678" pattern="[0-9]{9}">
                                <small class="form-text text-muted">Móvil de 9 dígitos (para Bizum y contactos)</small>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label required">Dirección completa</label>
                            <input type="text" class="form-control" name="direccion" 
                                   value="<%= customer.direccion || '' %>" required
                                   placeholder="Calle, número, piso, puerta">
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label required">Ciudad</label>
                                <input type="text" class="form-control" name="ciudad" 
                                       value="<%= customer.ciudad || '' %>" required
                                       placeholder="Santa Cruz de Tenerife">
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Código Postal</label>
                                <input type="text" class="form-control" name="codigo_postal" 
                                       value="<%= customer.codigo_postal || '' %>"
                                       placeholder="38001">
                            </div>
                        </div>
                        
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Verifica tus datos</strong> antes de guardar. Los pedidos se enviarán a esta dirección.
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a href="/mi-cuenta" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary" id="saveBtn">
                                <i class="fas fa-save"></i> Guardar cambios
                            </button>
                        </div>
                    </form>
                </div>
                
                <!-- Cambiar contraseña (opcional) -->
                <div class="form-card mt-4">
                    <h4><i class="fas fa-key me-2"></i>Cambiar contraseña</h4>
                    <p class="text-muted">Si deseas cambiar tu contraseña, contacta con soporte.</p>
                    <a href="https://wa.me/<%= whatsapp_number || '34600000000' %>" 
                       target="_blank" class="btn btn-outline-success">
                        <i class="fab fa-whatsapp"></i> Solicitar cambio de contraseña
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Footer -->
    <div style="background: #333; color: white; padding: 20px 0; margin-top: 50px;">
        <div class="container text-center">
            <p>&copy; <%= currentYear || new Date().getFullYear() %> Carnicería Tenerife</p>
            <p>
                <a href="https://wa.me/<%= whatsapp_number || '34600000000' %>" style="color: white;">
                    <i class="fab fa-whatsapp"></i> <%= whatsapp_number || '+34 600 00 00 00' %>
                </a>
            </p>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('updateProfileForm');
            const saveBtn = document.getElementById('saveBtn');
            
            form.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const formData = new FormData(form);
                const data = Object.fromEntries(formData.entries());
                
                // Validar teléfono
                const phoneRegex = /^[6-9]\d{8}$/;
                if (!phoneRegex.test(data.telefono.replace(/\D/g, ''))) {
                    alert('Teléfono inválido. Debe ser un móvil español de 9 dígitos');
                    return;
                }
                
                // Deshabilitar botón
                saveBtn.disabled = true;
                saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Guardando...';
                
                try {
                    const response = await fetch('/api/clientes/update-profile', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        alert('¡Perfil actualizado correctamente!');
                        window.location.href = '/mi-cuenta';
                    } else {
                        alert('Error: ' + result.message);
                        saveBtn.disabled = false;
                        saveBtn.innerHTML = '<i class="fas fa-save"></i> Guardar cambios';
                    }
                } catch (error) {
                    alert('Error de conexión. Intenta nuevamente.');
                    saveBtn.disabled = false;
                    saveBtn.innerHTML = '<i class="fas fa-save"></i> Guardar cambios';
                }
            });
        });
    </script>
</body>
</html>