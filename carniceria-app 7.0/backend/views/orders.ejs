                                    document.getElementById('cliente_email').value = customerData.email;
                                    document.getElementById('cliente_email').classList.add('auto-filled');
                                }
                                
                                if (customerData.direccion) {
                                    document.getElementById('cliente_direccion').value = customerData.direccion;
                                    document.getElementById('cliente_direccion').classList.add('auto-filled');
                                }
                                
                                if (customerData.ciudad) {
