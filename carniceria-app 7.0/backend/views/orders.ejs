    <script src="https://js.stripe.com/v3/"></script>
    <script>
        // Variables globales
        let stripe, elements, card;
        
        // Función principal para cargar y mostrar el carrito
        function loadAndRenderCart() {
            console.log('Cargando carrito para página de pedidos...');
            
            let cartItems = [];
            
            // Intentar cargar desde el carrito global (script.js)
            if (typeof cart !== 'undefined' && cart.items) {
                console.log('Usando carrito global:', cart.items);
                cartItems = cart.items;
                
                // Actualizar contador del carrito global
                cart.updateCartCount();
            } else {
                // Fallback: cargar desde localStorage
                try {
                    const cartData = localStorage.getItem('carniceria_cart') || '[]';
                    cartItems = JSON.parse(cartData);
                    console.log('Cargado desde localStorage:', cartItems);
                } catch (e) {
                    console.error('Error cargando carrito:', e);
                    cartItems = [];
                }
            }
            
            renderCartItems(cartItems);
            updateCartCount(cartItems);
        }
        
        // Renderizar items del carrito
        function renderCartItems(cartItems) {
            const container = document.getElementById('cart-items');
            const totalElement = document.getElementById('cart-total');
            
            if (!cartItems || cartItems.length === 0) {
                container.innerHTML = `
                    <div class="empty-cart">
                        <i class="fas fa-shopping-cart"></i>
                        <h4>Tu carrito está vacío</h4>
                        <p>Añade algunos productos para continuar!</p>
                    </div>
                `;
                totalElement.textContent = '€0.00';
                return;
            }
            
            let html = '';
            let total = 0;
            
            cartItems.forEach((item, index) => {
                const itemTotal = (item.price || 0) * (item.quantity || 0);
                total += itemTotal;
                
                html += `
                    <div class="cart-item" data-index="${index}">
                        <div class="item-name">
                            <strong>${item.name || 'Producto'}</strong><br>
                            <small>€${(item.price || 0).toFixed(2)}/${item.unit || 'unidad'}</small>
                        </div>
                        <div class="item-quantity">
                            <div class="quantity-control">
                                <button class="qty-btn minus" onclick="updateCartQuantity(${index}, -1)">-</button>
                                <input type="number" 
                                       class="qty-input" 
                                       value="${item.quantity || 1}" 
                                       min="1"
                                       onchange="updateCartQuantityInput(${index}, this.value)">
                                <button class="qty-btn plus" onclick="updateCartQuantity(${index}, 1)">+</button>
                            </div>
                            <span class="remove-item" onclick="removeCartItem(${index})">
                                <i class="fas fa-trash"></i>
                            </span>
                        </div>
                        <div class="item-price">
                            €${(item.price || 0).toFixed(2)}
                        </div>
                        <div class="item-total">
                            <strong>€${itemTotal.toFixed(2)}</strong>
                        </div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
            totalElement.textContent = `€${total.toFixed(2)}`;
            
            // Actualizar información de Bizum si está activo
            updateBizumInfo();
        }
        
        // Actualizar contador del carrito
        function updateCartCount(cartItems) {
            const totalItems = cartItems.reduce((sum, item) => sum + (item.quantity || 0), 0);
            document.querySelectorAll('.cart-count').forEach(element => {
                element.textContent = totalItems;
            });
        }
        
        // Funciones globales para manipular el carrito
        window.updateCartQuantity = function(index, change) {
            let cartItems = getCartItems();
            
            if (cartItems && cartItems[index]) {
                const newQuantity = (cartItems[index].quantity || 0) + change;
                if (newQuantity >= 1) {
                    cartItems[index].quantity = newQuantity;
                    saveCartItems(cartItems);
                    loadAndRenderCart();
                }
            }
        };
        
        window.updateCartQuantityInput = function(index, value) {
            let cartItems = getCartItems();
            
            if (cartItems && cartItems[index]) {
                const newQuantity = parseInt(value);
                if (!isNaN(newQuantity) && newQuantity >= 1) {
                    cartItems[index].quantity = newQuantity;
                    saveCartItems(cartItems);
                    loadAndRenderCart();
                }
            }
        };
        
        window.removeCartItem = function(index) {
            if (confirm('¿Eliminar este producto del carrito?')) {
                let cartItems = getCartItems();
                
                if (cartItems && cartItems[index]) {
                    cartItems.splice(index, 1);
                    saveCartItems(cartItems);
                    loadAndRenderCart();
                }
            }
        };
        
        // Obtener items del carrito (compatible con script.js y localStorage)
        function getCartItems() {
            if (typeof cart !== 'undefined' && cart.items) {
                return cart.items;
            } else {
                try {
                    const cartData = localStorage.getItem('carniceria_cart') || '[]';
                    return JSON.parse(cartData);
                } catch (e) {
                    console.error('Error obteniendo carrito:', e);
                    return [];
                }
            }
        }
        
        // Guardar items del carrito (compatible con script.js y localStorage)
        function saveCartItems(cartItems) {
            if (typeof cart !== 'undefined' && cart.saveToStorage) {
                cart.items = cartItems;
                cart.saveToStorage();
            } else {
                localStorage.setItem('carniceria_cart', JSON.stringify(cartItems));
                
                // Actualizar contador manualmente
                const totalItems = cartItems.reduce((sum, item) => sum + (item.quantity || 0), 0);
                document.querySelectorAll('.cart-count').forEach(element => {
                    element.textContent = totalItems;
                });
            }
        }
        
        // Vaciar carrito
        document.getElementById('clear-cart').addEventListener('click', () => {
            let cartItems = getCartItems();
            
            if (cartItems.length > 0 && confirm('¿Vaciar todo el carrito?')) {
                if (typeof cart !== 'undefined' && cart.clear) {
                    cart.clear();
                } else {
                    localStorage.setItem('carniceria_cart', JSON.stringify([]));
                }
                loadAndRenderCart();
            }
        });
        
        // Seguir comprando
        document.getElementById('continue-shopping').addEventListener('click', () => {
            window.location.href = '/productos';
        });
        
        // Método de pago seleccionado
        document.querySelectorAll('.payment-method').forEach(method => {
            method.addEventListener('click', function() {
                document.querySelectorAll('.payment-method').forEach(m => {
                    m.classList.remove('active');
                });
                this.classList.add('active');
                
                const paymentMethod = this.dataset.method;
                document.getElementById('metodo_pago').value = paymentMethod;
                
                // Mostrar/ocultar Stripe para pagos con tarjeta
                const stripeSection = document.getElementById('stripe-payment');
                if (paymentMethod === 'tarjeta') {
                    stripeSection.style.display = 'block';
                    initStripe();
                } else {
                    stripeSection.style.display = 'none';
                }
                
                // Mostrar/ocultar instrucciones para Bizum
                const bizumSection = document.getElementById('bizum-instructions');
                if (paymentMethod === 'bizum') {
                    bizumSection.style.display = 'block';
                    // Actualizar monto y referencia
                    updateBizumInfo();
                } else {
                    bizumSection.style.display = 'none';
                }
            });
        });
        
        // Inicializar Stripe
        function initStripe() {
            if (typeof Stripe === 'undefined') return;
            
            stripe = Stripe('<%= stripePublicKey %>');
            elements = stripe.elements();
            card = elements.create('card', {
                style: {
                    base: {
                        fontSize: '16px',
                        color: '#32325d',
                        fontFamily: 'Roboto, sans-serif'
                    }
                }
            });
            
            card.mount('#card-element');
            
            card.addEventListener('change', function(event) {
                const displayError = document.getElementById('card-errors');
                if (event.error) {
                    displayError.textContent = event.error.message;
                } else {
                    displayError.textContent = '';
                }
            });
        }
        
        // Función para actualizar información de Bizum
        function updateBizumInfo() {
            let cartItems = getCartItems();
            const total = cartItems.reduce((sum, item) => sum + ((item.price || 0) * (item.quantity || 0)), 0);
            const iva = total * 0.21;
            const envio = total > 50 ? 0 : 5;
            const totalConIvaYEnvio = total + iva + envio;
            
            // Generar referencia única para Bizum
            const timestamp = Date.now();
            const referencia = `PED-${timestamp.toString().slice(-6)}`;
            
            document.getElementById('bizum-amount').textContent = `€${totalConIvaYEnvio.toFixed(2)}`;
            document.getElementById('bizum-reference').textContent = referencia;
        }
        
        // Función para mostrar modal de Bizum
        function showBizumModal(total, referencia) {
            const modalHtml = `
                <div class="modal-overlay" id="bizumModal">
                    <div class="modal-content">
                        <h3><i class="fas fa-mobile-alt" style="color: #6f42c1;"></i> Pago con Bizum</h3>
                        
                        <div style="margin: 20px 0; padding: 15px; background: #f0f8ff; border-radius: 5px;">
                            <p><strong>Importe a pagar:</strong> €${total.toFixed(2)}</p>
                            <p><strong>Referencia:</strong> <code>${referencia}</code></p>
                            <p><strong>Número Bizum:</strong> <strong><%= whatsapp_number %></strong></p>
                        </div>
                        
                        <h4>Instrucciones:</h4>
                        <ol style="margin-left: 20px;">
                            <li>Abre tu aplicación de banca móvil</li>
                            <li>Selecciona la opción "Bizum"</li>
                            <li>Introduce nuestro número: <strong><%= whatsapp_number %></strong></li>
                            <li>Envía el importe exacto: <strong>€${total.toFixed(2)}</strong></li>
                            <li>En el concepto, escribe: <code>${referencia}</code></li>
                        </ol>
                        
                        <div style="margin-top: 20px; padding: 15px; background: #fff3cd; border-radius: 5px; border: 1px solid #ffeaa7;">
                            <p><i class="fas fa-exclamation-circle"></i> <strong>Importante:</strong> El pedido se confirmará una vez recibido el pago por Bizum.</p>
                        </div>
                        
                        <div class="modal-actions">
                            <button type="button" class="btn btn-secondary" onclick="closeBizumModal()">
                                <i class="fas fa-times"></i> Cancelar
                            </button>
                            <button type="button" class="btn btn-primary" onclick="confirmBizumOrder('${referencia}')">
                                <i class="fas fa-check"></i> Ya he pagado
                            </button>
                        </div>
                    </div>
                </div>
            `;
            
            // Agregar modal al body
            const modalContainer = document.createElement('div');
            modalContainer.innerHTML = modalHtml;
            document.body.appendChild(modalContainer);
            
            // Cerrar modal al hacer clic fuera
            document.getElementById('bizumModal').addEventListener('click', function(e) {
                if (e.target === this) {
                    closeBizumModal();
                }
            });
        }
        
        // Cerrar modal de Bizum
        function closeBizumModal() {
            const modal = document.getElementById('bizumModal');
            if (modal) {
                modal.remove();
            }
        }
        
        // Obtener datos del formulario (versión mejorada)
        function getOrderData() {
            let cartItems = getCartItems();
            
            // Obtener datos del formulario
            let orderData = {
                cliente_nombre: document.getElementById('cliente_nombre').value,
                cliente_telefono: document.getElementById('cliente_telefono').value,
                cliente_email: document.getElementById('cliente_email').value || '',
                cliente_direccion: document.getElementById('cliente_direccion').value,
                cliente_ciudad: document.getElementById('cliente_ciudad').value,
                cliente_codigo_postal: document.getElementById('cliente_codigo_postal').value || '',
                metodo_pago: document.getElementById('metodo_pago').value,
                notas: document.getElementById('notas').value || '',
                productos: cartItems.map(item => ({
                    id: item.id,
                    cantidad: item.quantity,
                    precio: item.price
                })),
                total: cartItems.reduce((sum, item) => sum + ((item.price || 0) * (item.quantity || 0)), 0)
            };
            
            return orderData;
        }
        
        // Función para verificar si el cliente está autenticado
        async function checkCustomerAuth() {
            try {
                const response = await fetch('/api/customer/profile');
                const data = await response.json();
                return data.success === true;
            } catch (error) {
                return false;
            }
        }
        
        // Confirmar pedido con Bizum
        async function confirmBizumOrder(referencia) {
            try {
                const submitBtn = document.getElementById('submit-order');
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Confirmando...';
                
                // Obtener datos del formulario
                const orderData = getOrderData();
                orderData.referencia_bizum = referencia;
                orderData.metodo_pago = 'bizum';
                
                // Determinar qué API usar basado en si el cliente está autenticado
                let apiEndpoint = '/api/orders'; // Para clientes autenticados
                
                // Verificar si hay sesión de cliente
                const isCustomerAuthenticated = await checkCustomerAuth();
                if (!isCustomerAuthenticated) {
                    // Usar API para pedidos anónimos
                    apiEndpoint = '/api/pedidos-anonimos';
                    console.log('Usando API para pedidos anónimos');
                } else {
                    console.log('Cliente autenticado, usando API normal');
                }
                
                // Enviar pedido a la API
                const response = await fetch(apiEndpoint, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(orderData)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Limpiar carrito
                    if (typeof cart !== 'undefined' && cart.clear) {
                        cart.clear();
                    } else {
                        localStorage.setItem('carniceria_cart', JSON.stringify([]));
                    }
                    
                    // Cerrar modal
                    closeBizumModal();
                    
                    // Mostrar mensaje de éxito
                    alert(`¡Pedido creado exitosamente!\nCódigo: ${result.order.codigo_pedido}\n\nRecuerda que debes enviar el pago por Bizum para que procesemos tu pedido.`);
                    
                    // Redirigir según si es cliente registrado
                    if (isCustomerAuthenticated) {
                        window.location.href = '/mis-pedidos';
                    } else {
                        window.location.href = '/';
                    }
                } else {
                    throw new Error(result.message || 'Error al crear pedido');
                }
                
            } catch (error) {
                console.error('Error:', error);
                alert(`Error: ${error.message}`);
                
                const submitBtn = document.getElementById('submit-order');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-check-circle"></i> Confirmar Pedido';
            }
        }
        
        // Enviar pedido (versión mejorada)
        document.getElementById('order-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            let cartItems = getCartItems();
            
            if (!cartItems || cartItems.length === 0) {
                alert('El carrito está vacío');
                return;
            }
            
            const paymentMethod = document.getElementById('metodo_pago').value;
            if (!paymentMethod) {
                alert('Por favor, selecciona un método de pago');
                return;
            }
            
            // Si es Bizum, mostrar modal especial
            if (paymentMethod === 'bizum') {
                const total = cartItems.reduce((sum, item) => sum + ((item.price || 0) * (item.quantity || 0)), 0);
                const timestamp = Date.now();
                const referencia = `BIZUM-${timestamp.toString().slice(-6)}`;
                
                showBizumModal(total, referencia);
                return; // No continuar con el envío normal
            }
            
            // Validar datos obligatorios
            const requiredFields = [
                'cliente_nombre',
                'cliente_telefono', 
                'cliente_direccion',
                'cliente_ciudad'
            ];
            
            for (const fieldId of requiredFields) {
                const field = document.getElementById(fieldId);
                if (!field || !field.value.trim()) {
                    alert(`Por favor, completa el campo: ${field.placeholder || field.name}`);
                    field.focus();
                    return;
                }
            }
            
            // Verificar formato de teléfono
            const telefono = document.getElementById('cliente_telefono').value;
            const telefonoLimpio = telefono.replace(/\D/g, '');
            if (telefonoLimpio.length < 9) {
                alert('Por favor, introduce un número de teléfono válido (mínimo 9 dígitos)');
                document.getElementById('cliente_telefono').focus();
                return;
            }
            
            try {
                const submitBtn = document.getElementById('submit-order');
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Procesando...';
                
                // Obtener datos del pedido
                const orderData = getOrderData();
                
                // Determinar qué API usar basado en si el cliente está autenticado
                let apiEndpoint = '/api/orders'; // Para clientes autenticados
                
                // Verificar si hay sesión de cliente
                const isCustomerAuthenticated = await checkCustomerAuth();
                if (!isCustomerAuthenticated) {
                    // Usar API para pedidos anónimos
                    apiEndpoint = '/api/pedidos-anonimos';
                    console.log('Usando API para pedidos anónimos');
                } else {
                    console.log('Cliente autenticado, usando API normal');
                }
                
                // Si es pago con tarjeta, procesar con Stripe primero
                if (paymentMethod === 'tarjeta' && typeof stripe !== 'undefined') {
                    // Crear intención de pago
                    const paymentResponse = await fetch('/api/payments/create-intent', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            amount: Math.round(orderData.total * 100), // Stripe usa centavos
                            orderId: `TEMP-${Date.now()}`,
                            metadata: { tipo: 'pedido_carniceria' }
                        })
                    });
                    
                    const paymentData = await paymentResponse.json();
                    
                    if (!paymentData.success) {
                        throw new Error(paymentData.message || 'Error al crear intención de pago');
                    }
                    
                    if (paymentData.clientSecret) {
                        // Confirmar pago con Stripe
                        const { paymentIntent, error } = await stripe.confirmCardPayment(
                            paymentData.clientSecret,
                            {
                                payment_method: {
                                    card: card,
                                    billing_details: {
                                        name: orderData.cliente_nombre,
                                        phone: orderData.cliente_telefono,
                                        email: orderData.cliente_email
                                    }
                                }
                            }
                        );
                        
                        if (error) {
                            throw new Error(error.message);
                        }
                        
                        if (paymentIntent.status === 'succeeded') {
                            orderData.stripe_payment_id = paymentIntent.id;
                        }
                    }
                }
                
                // Crear el pedido en la base de datos
                const orderResponse = await fetch(apiEndpoint, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(orderData)
                });
                
                const result = await orderResponse.json();
                
                if (result.success) {
                    // Limpiar carrito
                    if (typeof cart !== 'undefined' && cart.clear) {
                        cart.clear();
                    } else {
                        localStorage.setItem('carniceria_cart', JSON.stringify([]));
                    }
                    
                    // Mostrar mensaje de éxito
                    alert(`¡Pedido creado exitosamente!\nCódigo: ${result.order.codigo_pedido}\n\nTe hemos enviado un email de confirmación.`);
                    
                    // Redirigir según si es cliente registrado
                    if (isCustomerAuthenticated) {
                        window.location.href = '/mis-pedidos';
                    } else {
                        window.location.href = '/';
                    }
                } else {
                    throw new Error(result.message || 'Error al crear pedido');
                }
                
            } catch (error) {
                console.error('Error:', error);
                alert(`Error: ${error.message}`);
                
                const submitBtn = document.getElementById('submit-order');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-check-circle"></i> Confirmar Pedido';
            }
        });
        
        // Pedido por WhatsApp
        document.getElementById('whatsapp-order').addEventListener('click', function() {
            let cartItems = getCartItems();
            
            if (!cartItems || cartItems.length === 0) {
                alert('El carrito está vacío');
                return;
            }
            
            // Obtener datos del formulario
            const nombre = document.getElementById('cliente_nombre').value || 'Cliente';
            const telefono = document.getElementById('cliente_telefono').value || '';
            const direccion = document.getElementById('cliente_direccion').value || '';
            const ciudad = document.getElementById('cliente_ciudad').value || '';
            const metodoPago = document.getElementById('metodo_pago').value || 'efectivo';
            const notas = document.getElementById('notas').value || '';
            
            // Construir mensaje
            let message = `¡Hola! Me gustaría hacer un pedido:\n\n`;
            message += `*INFORMACIÓN DEL CLIENTE:*\n`;
            message += `Nombre: ${nombre}\n`;
            message += `Teléfono: ${telefono}\n`;
            message += `Dirección: ${direccion}\n`;
            message += `Ciudad: ${ciudad}\n\n`;
            
            message += `*PRODUCTOS:*\n`;
            cartItems.forEach((item, index) => {
                message += `${index + 1}. ${item.name} - ${item.quantity}${item.unit} - €${((item.price || 0) * (item.quantity || 0)).toFixed(2)}\n`;
            });
            
            const total = cartItems.reduce((sum, item) => sum + ((item.price || 0) * (item.quantity || 0)), 0);
            const iva = total * 0.21;
            const envio = total > 50 ? 0 : 5;
            const totalConIvaYEnvio = total + iva + envio;
            
            message += `\n*RESUMEN:*\n`;
            message += `Subtotal: €${total.toFixed(2)}\n`;
            message += `IVA (21%): €${iva.toFixed(2)}\n`;
            message += `Envío: €${envio.toFixed(2)}\n`;
            message += `*TOTAL: €${totalConIvaYEnvio.toFixed(2)}*\n\n`;
            
            message += `*MÉTODO DE PAGO:* ${metodoPago}\n`;
            
            if (notas) {
                message += `*NOTAS:* ${notas}\n`;
            }
            
            // Codificar el mensaje para URL
            const encodedMessage = encodeURIComponent(message);
            
            // Abrir WhatsApp
            const whatsappNumber = '<%= whatsapp_number %>';
            window.open(`https://wa.me/${whatsappNumber}?text=${encodedMessage}`, '_blank');
        });
        
        // Inicializar página de pedidos
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Página de pedidos cargada');
            loadAndRenderCart();
            initStripe();
            
            // Menú móvil (igual que en las otras páginas)
            const menuToggle = document.getElementById('menuToggle');
            const navMenu = document.getElementById('navMenu');
            
            if (menuToggle && navMenu) {
                menuToggle.addEventListener('click', function() {
                    navMenu.classList.toggle('active');
                    this.innerHTML = navMenu.classList.contains('active') 
                        ? '<i class="fas fa-times"></i>' 
                        : '<i class="fas fa-bars"></i>';
                });
                
                // Cerrar menú al hacer click en enlace
                document.querySelectorAll('.nav-link').forEach(link => {
                    link.addEventListener('click', () => {
                        navMenu.classList.remove('active');
                        menuToggle.innerHTML = '<i class="fas fa-bars"></i>';
                    });
                });
            }
            
            // También actualizar contador por si acaso
            if (typeof cart !== 'undefined' && cart.updateCartCount) {
                cart.updateCartCount();
            }
            
            // Slider de marketing - JavaScript para alternar mensajes
            const marketingMessages = [
                { icon: 'fas fa-truck', text: 'Envío GRATIS en pedidos superiores a 50€', badge: 'NUEVO' },
                { icon: 'fas fa-clock', text: 'Entrega en 24-48 horas en toda Tenerife', badge: null },
                { icon: 'fas fa-percentage', text: '¡10% de descuento en tu primer pedido!', badge: 'OFERTA' },
                { icon: 'fas fa-utensils', text: 'Productos 100% frescos y de calidad', badge: null },
                { icon: 'fas fa-shield-alt', text: 'Compra segura con múltiples métodos de pago', badge: null },
                { icon: 'fab fa-whatsapp', text: 'Atención personalizada por WhatsApp', badge: null },
                { icon: 'fas fa-award', text: 'Calidad certificada desde 1990', badge: 'GARANTÍA' },
                { icon: 'fas fa-leaf', text: 'Productos de proximidad y sostenibles', badge: 'ECO' }
            ];
            
            // Función para actualizar el slider de marketing
            function updateMarketingSlider() {
                const track = document.getElementById('marketingTrack');
                if (!track) return;
                
                // Duplicar los mensajes para efecto continuo
                const allMessages = [...marketingMessages, ...marketingMessages];
                
                // Crear HTML del slider
                let html = '';
                allMessages.forEach(msg => {
                    html += `
                        <div class="marketing-slide">
                            <i class="${msg.icon}"></i>
                            <span>${msg.text}</span>
                            ${msg.badge ? `<span class="marketing-badge">${msg.badge}</span>` : ''}
                        </div>
                    `;
                });
                
                track.innerHTML = html;
            }
            
            // Inicializar slider de marketing
            updateMarketingSlider();
            
            // Cambiar mensajes cada 50 segundos (opcional)
            setInterval(updateMarketingSlider, 50000);
        });
    </script>
